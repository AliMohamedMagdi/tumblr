type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  text: String!
  imgUrl: String
  link: String
  likes: [Like!]!
  op: User! @relation(name: "OriginalPoster")
  reblogPoster: User @relation(name: "ReblogPoster")
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]! @relation(name: "OriginalPoster")
  likes: [Like!]!
}

type Like {
  id: ID! @id
  post: Post!
  user: User!
}
