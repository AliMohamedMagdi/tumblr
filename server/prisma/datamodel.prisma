type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  text: String!
  imgUrl: String
  link: String
  op: User
  likes: [Like!]!
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]!
  likes: [Like!]!
}

type Like {
  id: ID! @id
  post: Post!
  user: User!
}
